<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- 从系统 home 位置读取 -->
	<properties fileName="${sys:user.home}/${const:net.gdface.facelog.service.GlobalConfig.HOME_FOLDER}/${const:net.gdface.facelog.service.GlobalConfig.USER_PROPERTIES}" config-optional="true"/>
	<!-- 如果定义了 FACELOG_HOME 环境变量,从变量指定的位置读取配置 -->
	<properties fileName="${env:FACELOG_HOME}/${const:net.gdface.facelog.service.GlobalConfig.USER_PROPERTIES}" config-optional="true"/>
	<xml fileName="defaultConfig.xml" config-name = "default config"/>
</configuration>