<?xml version='1.0'?>

<!DOCTYPE sqlMapConfig PUBLIC "-//iBATIS.com//DTD SQL Map Config 2.0//EN" "http://www.ibatis.com/dtd/sql-map-config-2.dtd">

<!-- WARNING: This is an autogenerated file (JSQL2iBatis - http://sourceforge.net/projects/jsql2ibatis/)-->

<sqlMapConfig>

	<properties resource="config/JDBCProperties.properties"/>

	<settings useStatementNamespaces="true" cacheModelsEnabled="true" enhancementEnabled="true" maxSessions="64" maxTransactions="8" maxRequests="128" />

	<transactionManager type="JDBC">
	<dataSource type="SIMPLE">
		<property value="${driver}" name="JDBC.Driver" />
		<property value="${url}" name="JDBC.ConnectionURL" />
		<property value="${username}" name="JDBC.Username" />
		<property value="${password}" name="JDBC.Password" />
		<property value="${activeConnections}" name="Pool.MaximumActiveConnections" />
		<property value="${idleConnections}" name="Pool.MaximumIdleConnections" />
		<property value="${maxWait}" name="Pool.MaximumWait" />
	</dataSource>
	</transactionManager>


	<!-- Aqui pasar la lista de los generados automaticamente-->
	#foreach ($table in $tables)
	<sqlMap resource="config/xml/${table.asCoreClass()}.xml" />
	#end
											
									
</sqlMapConfig>